<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="1dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/rowImageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/rowCheckerImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@drawable/checkimage"
        android:visibility="gone"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rowImageView"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:background="@color/SHOWABLE"
        >
        <TextView
            android:id="@+id/imageSizeInRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/WHITE"
            />
        <TextView
            android:id="@+id/imageDateInRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/WHITE"
            />


    </LinearLayout>

</RelativeLayout>